mixin youtube(id = "YgmIibSnZs0", name = "Sky with clouds. Relaxing background.", img = 0)
  .youtube.js-youtube(data-id=id)
    a.youtube__link.js-youtube--link(
      target="_blank"
      href="https://youtu.be/"+id
    )
      picture
        source(
          type="image/webp"
          srcset=`https://i.ytimg.com/vi_webp/${id}/${img}.webp`
        )
        img.youtube__media(
          src=`https://i.ytimg.com/vi/${id}/${img}.jpg`
          alt=name
        )
    button.youtube__button.js-youtube--button(
      type="button"
      aria-label="Запустить видео"
    )
